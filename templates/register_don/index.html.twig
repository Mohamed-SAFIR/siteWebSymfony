{% extends 'base.html.twig' %}

{% block title %}Faire un don{% endblock %}

{% block body %}
<style>
    .main { margin-bottom : 250px}
</style>

<div class="main">
    <div class="container">
    <h1>Faire un don</h1>
        <hr>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.nom) }}
            </div>
            <div class="form-group">
                {{ form_row(form.prenom) }}
            </div>
            <div class="form-group">
                {{ form_row(form.numeroCarte) }}
            </div>
            <div class="form-group">
                {{ form_row(form.dateExpiration) }}
            </div>
            <div class="form-group">
                {{ form_row(form.cryptogramme) }}
            </div>
            <div class="form-group">
                {{ form_row(form.montant) }}
            </div>

            <hr>

            <div class="form-group">
                <button class="btn btn-primary">Envoyer</button>
                <button type="reset" class="btn btn-danger">Annuler</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
